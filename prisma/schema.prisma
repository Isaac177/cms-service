// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Classroom {
  id        Int        @id @default(autoincrement())
  name      String
  subject   String
  image     String
  students  Student[]
  schedules Schedule[]
}

model Student {
  id            Int       @id @default(autoincrement())
  name          String
  email         String    @unique
  image         String
  enrolledClass Classroom @relation(fields: [classroomId], references: [id])
  classroomId   Int
}

model Schedule {
  id          Int       @id @default(autoincrement())
  dateTime    DateTime
  classroom   Classroom @relation(fields: [classroomId], references: [id])
  classroomId Int
}
